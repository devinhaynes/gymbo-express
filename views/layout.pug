doctype html  
html(lang='en')  
    head
        title Gymbo
        link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css', integrity='sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS', rel='stylesheet', crossorigin='anonymous')
        link(href='style.css' rel='stylesheet')
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.7.8/angular.min.js")
        script(src='https://d3js.org/d3.v4.min.js' type='text/javascript')
        script(src = "https://d3js.org/d3-collection.v1.min.js")
        meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    body
        nav.navbar.navbar-dark.bg-dark.navbar-expand(style="color: white")
                div.navbar-collapse.collapse.w-100.order-1.order-md-0.dual-collapse2                
                    a.nav-link.navbar-brand Gymbo
                    span.navbar-text Your Personal Gym Assistant
                div.navbar-collapse.collapse.w-100.order-3.dual-collapse2
                    ul.navbar-nav.mr-auto
                        if user
                            li.nav-item
                                a.nav-link(href='/logout') Logout
                            //-
                                li.nav-item
                                    a.nav-link(href='/reset') Reset Password
                        else
                            li.nav-item
                                a.nav-link(href="/") Login
                            li.nav-item
                                a.nav-link(href="/register") Register 
        .container
            != messages('message', locals)
        block content
        hr
        footer
            .container
                p &copy; 2019 Copyright: Gymbo
        block script
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js", integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo", crossorigin="anonymous")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.6/umd/popper.min.js", integrity="sha384-wHAiFfRlMFy6i5SRaxvfOCifBUQy1xHdJ/yoi7FRNXMRBu5WHdZYu1hA6ZOblgut", crossorigin="anonymous")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/js/bootstrap.min.js", integrity="sha384-B0UglyR+jN6CkvvICOB2joaf5I4l3gm9GU6Hc1og6Ls7i6U/mkkaduKaBhlAXv9k", crossorigin="anonymous")